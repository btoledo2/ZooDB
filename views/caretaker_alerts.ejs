<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Caretaker Alerts</title>

  <!-- Custom fonts for this template -->
  <link href="/../assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

  <!-- Custom styles for this template -->
  <link href="/../assets/css/sb-admin-2.min.css" rel="stylesheet">

  <!-- Custom styles for this page -->
  <link href="/../assets/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">

</head>


<body id="page-top" style="background-image: url(/../assets/img/heroimg.jpg);background-repeat: no-repeat; background-size: cover;">

<!-- ======= Mobile Menu ======= -->
<div class="site-mobile-menu site-navbar-target">
  <div class="site-mobile-menu-header">
    <div class="site-mobile-menu-close mt-3">
      <span class="icofont-close js-menu-toggle"></span>
    </div>
  </div>
  <div class="site-mobile-menu-body"></div>
</div>

<!-- ======= Header ======= -->




<!-- Begin Page Content -->
<div class="container-fluid">

  <a class="btn btn-primary" href="/">Home</a>
  <!-- Page Heading -->
  <%var sum=data[0].length;  var time = 1; if(data[1]=="week")time=7;else if(data[1]=="month")time=30;else if(data[1]=="year")time=365;%> 
  
  <h1 class="h3 mb-2 text-gray-800">Caretaker Alerts in the past <%=data[1]%>:</h1>
  <a class="btn btn-primary" href="/alertOptions">Change time period</a>
  <!-- DataTales Example -->

  <div class="card shadow mb-4">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-dark" id="" width="100%" cellspacing="0">
          <thead>
            <tr>
              <td style="font-weight: bold; font-size: larger;">Total healthy</th>
              <td style="font-weight: bold; font-size: larger;">Total sick</th>
              <td style="font-weight: bold; font-size: larger;">Total pregnant</th>  
              <td style="font-weight: bold; font-size: larger;">Total deceased</th>
              <td style="font-weight: bold; font-size: larger;">Total alerts</th>
              <td style="font-weight: bold; font-size: larger;">Healthy/day</th>
              <td style="font-weight: bold; font-size: larger;">Sick/day</th>  
              <td style="font-weight: bold; font-size: larger;">Pregnant/day</th>
              <td style="font-weight: bold; font-size: larger;">Deceased/day</th>
              <td style="font-weight: bold; font-size: larger;">Alerts/day</th>
            </tr>
          </thead>
          <tbody>
              <tr>
                <td><%= data[2][0].numHealthy %>  </td>
                <td><%= data[3][0].numSick %> </td>
                <td><%= data[4][0].numPregnant %> </td>
                <td><%= data[5][0].numDeceased %> </td>
                <td><%= sum %></td>
                <td><%= (data[2][0].numHealthy/time).toFixed(3) %></td>
                <td><%= (data[3][0].numSick/time).toFixed(3) %></td>
                <td><%= (data[4][0].numPregnant/time).toFixed(3) %></td>
                <td><%= (data[5][0].numDeceased/time).toFixed(3) %></td>
                <td><%= (sum/time).toFixed(3) %></td>
              </tr>
        </tbody>
        </table> 
        </div>
    </div>
  </div>

  <div class="card shadow mb-4">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-dark" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <td style="font-weight: bold; font-size: larger;">Animal Name</th>
              <td style="font-weight: bold;font-size: larger;">Animal ID</th>
              <td style="font-weight: bold;font-size: larger;">Health Changed To</th>  
              <td style="font-weight: bold;font-size: larger;">Date of Alert</th>
            </tr>
          </thead>
          <tbody>
            
            <% for(var i=0; i< data[0].length; i++) { %>
              <tr>
                <td><%= data[0][i].animalName %>  </td>
                <td><%= data[0][i].animalID %> </td>
                <td><%= data[0][i].health %> </td>
                <td> <%= data[0][i].date %> </td>
              </tr>
            <% } %>  
        </tbody>
        </table> 
        </div>
    </div>
  </div>

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

</div>

  <!-- Bootstrap core JavaScript-->
  <script src="/../assets/vendor/jquery/jquery.min.js"></script>
  <script src="/../assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Core plugin JavaScript-->
  <script src="/../assets/vendor/jquery.easing/jquery.easing.min.js"></script>

  <!-- Custom scripts for all pages-->
  <script src="/../assets/js/sb-admin-2.min.js"></script>

  <!-- Page level plugins -->
  <script src="/../assets/vendor/datatables/jquery.dataTables.min.js"></script>
  <script src="/../assets/vendor/datatables/dataTables.bootstrap4.min.js"></script>

  <!-- Page level custom scripts -->
  <script src="/../assets/vendor/demo/datatables-demo.js"></script>

</body>

</html>
