</head>

<body">

  <!-- ======= Mobile Menu ======= -->
  <div class="site-mobile-menu site-navbar-target">
    <div class="site-mobile-menu-header">
      <div class="site-mobile-menu-close mt-3">
        <span class="icofont-close js-menu-toggle"></span>
      </div>
    </div>
    <div class="site-mobile-menu-body"></div>
  </div>

  <!-- ======= Header ======= -->
  
  <header class="site-navbar site-navbar-target js-sticky-header bg-dark" role="banner" style="min-height:10px">

    <div class="container">
      <div class="row align-items-center">

        <div class="col-6 col-lg-2">
          <h1 class="mb-0 site-logo"  style="padding-top: 7%; padding-bottom: 10%;"><a href="/" class="mb-0"><img src = "/../assets/img/zoologo2.png" width = "152px" height = "40px"></a></h1>
        </div>

        <div class="col-12 col-md-10 d-none d-lg-block">
          <nav class="site-navigation position-relative text-right navbar-dark" role="navigation">

            <ul class="site-menu main-menu js-clone-nav mr-auto d-none d-lg-block">
              <li class="nav-item active"><a href="/" class="nav-link" style="padding-top: 0%; padding-bottom: 0%;">Home</a></li>
            </ul>
          </nav>
        </div>

        <div class="col-6 d-inline-block d-lg-none ml-md-0 py-3" style="position: relative; top: 3px;">

          <a href="#" class="burger site-menu-toggle js-menu-toggle" data-toggle="collapse" data-target="#main-navbar">
            <span></span>
          </a>
        </div>

      </div>
    </div>

  </header>


  <main id="main">

    <!-- ======= Home Section ======= -->
    <section class="section" style="padding-bottom: 0px; padding-top: 75px;">
      <div class="container">


        <div class="row justify-content-center text-center mb-5">
            <div class="col-md-10" data-aos="">
              <h2  id="tickets">Please provide the details of the item you want to add:</h2>
            </div>
        </div>

    <div class="row row-cols-1 justify-content-center">  
        <div class="col mb-4" data-aos="fade-up" data-aos-delay="0">
          <div class="card text-center h-100 ">
            <div class="card-body" style="color:black"></div>
            <%var unit="g"; if(data=="Medicine")unit="mg"; %>
    <form method="POST" action="/addNewItem/<%=data%>">
        <div class="row card-text row-cols-1">
            <div class="justify-content-center text-center">
              <p class="card-text">
                <p>
                    <label for="name" style="color: black;">Item Name:</label>
                    <input class = "css-input" type="text" id="name" name="name" maxlength="50" required>
                    <label for="price" style="color: black;">Price: $</label>
                    <input class = "css-input"type="number" id="price" name="price" min="0" value="0.00" step="0.01" required>
                    <label for="image_path" style="color: black;">Image Name: </label>
                    <input class = "css-input" type="text" id="image_path" name="image_path" maxlength="50" required>
                </p>
                <p>
                    <label for="size" style="color: black;">Size: </label>
                    <select class = "css-input" id="size" name="size">
                        <option value="NA">NA</option>
                        <option value="XS">XS</option>
                        <option value="S">S</option>
                        <option value="M">M</option>
                        <option value="L">L</option>
                        <option value="XL">XL</option>
                    </select>
                    <label for="stock" style="color: black;">Current Stock </label>
                    <input class = "css-input" type="number" id="stock" name="stock" min="0" value="0" required>
                    <label for="target" style="color: black;">Target Stock </label>
                    <input class = "css-input" type="number" id="target" name="target" min="1" value="1" required>
                </p>
               </p>
            </div>
          </div>
        <p>
          <button class="btn btn-primary" style="margin-top: 10px;">Add</button>
        </p>
    </form>
      </div>
      </div>
      </div>
      </div>
    </section>

  
</main><!-- End #main -->
  

      

    </div>
  </footer>
  

  <a href="#" class="back-to-top"><i class="icofont-simple-up"></i></a>

