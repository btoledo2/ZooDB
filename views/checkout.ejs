          </div>
        </div>

        <div class="row justify-content-center text-center mb-5">
            <div class="col-md-10" data-aos="">
              <h2 id="tickets">Please review the item you are buying:</h2>
            </div>
        </div>

        <div class="row row-cols-2 justify-content-center">

        <% var path = '/../assets/img/' + cart.image_path; %> 

          <div class="col mb-4" data-aos="fade-up" data-aos-delay="0" >
            <div class="card text-center h-100"  style="box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);">
              <img src="<%= path %>" class="card-img-top" alt="..." style = "padding:20px;" >
              <div class="card-body" style="color:black">
                <h5 class="card-title">$<%= cart.price %></h5>
                <p class="card-text"><%= cart.product_name %></p>
                <p class="card-text">Quantity: <%= cart.quantity %></p>
                <p class="card-text">Total: $<%= cart.quantity * cart.price %></p>
              </div>
            </div>
          </div>
      </div>

      <div class="row justify-content-center text-center mb-5">
        <div class="col-md-10" data-aos="">
          <h2 class="section-heading" id="tickets">Please fill out the info below:</h2>
        </div>

    <div class="row row-cols-1 justify-content-center">  
        <div class="col mb-4" data-aos="fade-up" data-aos-delay="0">
          <div class="card text-center h-100 border-success" style="border-width: 3px;">
            <div class="card-body" style="color:black">
      <!-- source: https://www.w3schools.com/howto/howto_css_checkout_form.asp -->
    <form method="POST" action="/buy/<%= cart.id%>/<%= cart.size %>/<%= cart.quantity %>/<%=cart.quantity * cart.price%>/">
        <div class="row card-text row-cols-1">
            <div class="justify-content-center text-center">
              <h3>Shipping Address</h3>
              <p class="card-text">
                <label for="fname">Full Name:</label>
                <input type="text" id="fname" name="firstname" placeholder="John M. Doe" required>
                <label for="email">Email:</label>
                <input type="text" id="email" name="email" placeholder="john@example.com" required>
              </p>
              <p class="card-text">
                <label for="adr">Address:</label>
                <input type="text" id="adr" name="address" placeholder="542 W. 15th Street" required>
                <label for="city">City:</label>
                <input type="text" id="city" name="city" placeholder="New York" required>
                <label for="state">State:</label>
                <input type="text" id="state" name="state" placeholder="NY" required>
                <label for="zip">Zip:</label>
                <input type="text" id="zip" name="zip" placeholder="10001" required>
            </p>
            </div>
  
            <div class="row card-text row-cols-1 justify-content-center text-center">
              <h3>Payment</h3>
              <p class="card-text">
                <label for="cname">Name on Card:</label>
                <input type="text" id="cname" name="cardname" placeholder="John More Doe" required>
                <label for="ccnum">Credit card number:</label>
                <input type="text" id="ccnum" name="cardnumber" placeholder="1111-2222-3333-4444" required>
              </p>
              <p class="card-text">
                <label for="expmonth">Exp Month:</label>
                <input type="text" id="expmonth" name="expmonth" placeholder="September" required>
                <label for="expyear">Exp Year:</label>
                <input type="text" id="expyear" name="expyear" placeholder="2018" required>
                <label for="cvv">CVV:</label>
                <input type="text" id="cvv" name="cvv" placeholder="352" required>
                </p>
              </div>
            </div>
  
          </div>
        <p>
          <button class="btn btn-primary" style="margin-top: 10px;">Submit</button>
        </p>
    </form>
      </div>
      </div>
      </div>
      </div>
    </section>

  
